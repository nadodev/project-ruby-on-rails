<div class="container mt-5">
  <h2>Criar Novo Ticket</h2>

  <%= form_with(model: @ticket, url: tickets_path, local: true, multipart: true, class: 'mt-3') do |form| %>
    <div class="mb-3">
      <%= form.label :title, 'Título', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :status, 'Status', class: 'form-label' %>
      <%= form.check_box :status, class: 'form-check-input' %>
    </div>

    <div class="mb-3">
      <%= form.label :descricao, 'Descrição', class: 'form-label' %>
      <%= form.text_area :descricao, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :image, 'Imagem', class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Criar Ticket', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>